{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "out/tests",
    "lib": ["es6"],
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "out",
    "**/*.json"
  ]
}