{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "vscode"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "out",
    "**/*.json"
  ]
}
